body {
  padding: 0;
  margin:  0;
  font-family: 'Noto Sans', sans-serif;
  line-height: 15px;
  font-size: 12px;
  background-color: rgba(245, 245, 245, 1);
  background-repeat: no-repeat;
  min-width: 320px;
  overflow-y: scroll;
  opacity: 1 !important;
  background-position: center;
}


.zv-butt {
  display: inline-block;
  cursor: pointer;
  background: rgba(200, 200, 200, 1);
  padding: 40px 100px;

  input {
    position: absolute;
    left: -100vw;
  }

  svg {
    max-width: 120px;
    height: 200px;


    * {
      transition: all .15s ease-in-out;
    }
  }


  &:hover {
    #cap, .cls-5 * {
      transform: translateY(4px);
    }

    #shadow {
      opacity: .8;
    }
  }

  input:checked {
    //display: none;

    &+svg {
      &:hover {
        #cap, .cls-5 * {
          transform: translateX(34%) translateY(4px);
        }

        #shadow {
          opacity: .8;
        }
      }

      #sliderBG {
        transform: translateX(92%);
      }

      #side, #cap, #shadow {
        transform: translateX(34%);
      }

    }
  }
}

.zv-copyright {
  padding: 20px 42px;

}

.zv-layout {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  min-height: 100vh;
  padding: 20px 0;
  background-image: url("data:image/svg+xml,%3Csvg width='84' height='48' viewBox='0 0 84 48' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 0h12v6H0V0zm28 8h12v6H28V8zm14-8h12v6H42V0zm14 0h12v6H56V0zm0 8h12v6H56V8zM42 8h12v6H42V8zm0 16h12v6H42v-6zm14-8h12v6H56v-6zm14 0h12v6H70v-6zm0-16h12v6H70V0zM28 32h12v6H28v-6zM14 16h12v6H14v-6zM0 24h12v6H0v-6zm0 8h12v6H0v-6zm14 0h12v6H14v-6zm14 8h12v6H28v-6zm-14 0h12v6H14v-6zm28 0h12v6H42v-6zm14-8h12v6H56v-6zm0-8h12v6H56v-6zm14 8h12v6H70v-6zm0 8h12v6H70v-6zM14 24h12v6H14v-6zm14-8h12v6H28v-6zM14 8h12v6H14V8zM0 8h12v6H0V8z' fill='rgba(225, 225, 225, 1)' fill-opacity='0.4' fill-rule='evenodd'/%3E%3C/svg%3E");

  &>* {
    padding: 0 calc(50vw - 1080px / 2);

    @media (max-width: 1080px) {
      padding: 0 40px;
    }
  }
}



  h2 {
    font-size: 14px;
    margin-bottom: 20px;
  }

  .zv-box {

    &._inner {
      border-radius: 8px;
      background-color: white;
      padding: 21px 42px;
      box-shadow: 0 14px 16px -16px rgba(0, 0, 0, .4);
    }
  }

  .zv-line {
    display: flex;
    flex-direction: column;
    //margin-bottom: 32px;
    //border-bottom: 2px solid rgba(200, 200, 200, .25);
    //padding-bottom: 20px;

    &:last-child {
      border: none;
      margin-bottom: 0;
    }

    @media (max-width: 720px) {
      flex-wrap: wrap;
    }

    .zv-calc {
      //flex-basis: 0;
      //min-width: 1px;
      //flex-grow: 1;
      display: flex;
      //flex-direction: column;
      padding-right: 20px;
      justify-content: flex-start;
      align-items: center;
      margin-bottom: 16px;

      &>* {margin-right: 20px;}

      &>*:nth-child(1) {flex-basis: 200px;}
      &>*:nth-child(2) {flex-basis: 120px;}
      &>*:nth-child(3) {flex-basis: 120px;}

      @media (max-width: 720px) {
        flex-basis: 100%;
        min-width: 100%;
        margin-bottom: 32px;
      }

      input {
        height: 40px;
        line-height: 40px;
        border: none;
        background-color: rgba(235, 235, 235, .5);
        padding: 0 0 0 8px;
        border-radius: 8px;
        font-size: 13px;

        &[type='checkbox'] {
          position: absolute;
          left: -100vw;

          &+div {
            width: 32px;
            height: 20px;
            border-radius: 10px;
            margin-right: 10px;
            position: relative;
            background-color: rgba(205, 205, 205, 1);
            cursor: pointer;
            padding: 0;

            &:before {
              content: '';
              display: block;
              position: absolute;
              top: 2px;
              left: 2px;
              border-radius: 10px;
              width: 16px;
              height: 16px;
              transition: all .15s ease-in-out;
              background-color: rgba(160, 160, 160, 1);
            }
          }

          &:checked+div:before {
            left: 14px;
            background-color: rgba(0, 160, 0, 1);
          }
        }
      }

      label {
        font-size: 12px;
        //height: 30px;
        //line-height: 15px;
        //margin-bottom: 10px;
        opacity: .75;

        &:last-child {
          display: flex;
          align-items: center;
        }

        &+label {
          height: 40px;
          cursor: pointer;
        }
      }

      div {
        height: 40px;
        line-height: 40px;
        border: none;
        background-color: rgba(235, 235, 235, .5);
        padding: 0 0 0 8px;
        border-radius: 8px;
        font-size: 16px;

        span {
          font-size: 80%;
          opacity: .5;
          margin-left: 4px;
        }
      }

      span {
        margin-top: 10px;
        opacity: .5;
      }

    }

  }
